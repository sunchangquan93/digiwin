<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <android.support.design.widget.TabLayout
        android:id="@+id/tl_tab"
        android:background="@color/white"
        app:tabIndicatorColor="@color/Base_color"
        app:tabSelectedTextColor="@color/Base_color"
        app:tabMaxWidth="0dp"
        app:tabMode="fixed"
        app:tabGravity="fill"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_40dp">
    </android.support.design.widget.TabLayout>

    <View
        android:layout_marginTop="@dimen/layout_39.5dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_0.5dp"
        android:background="@color/gray_f0" />
    <android.support.v4.view.ViewPager
        android:layout_below="@id/tl_tab"
        android:id="@+id/module_vp"
        android:layout_marginTop="@dimen/layout_10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </android.support.v4.view.ViewPager>
</RelativeLayout>