<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_48dp"
            android:background="@color/green7d"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/layout_30dp"
                android:layout_height="@dimen/welcome_text_margin"
                android:paddingBottom="@dimen/layout_14dp"
                android:paddingTop="@dimen/layout_14dp"
                android:src="@drawable/white_back" />

            <TextView
                android:id="@+id/tv_title_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_18sp" />

            <LinearLayout
                android:id="@+id/ll_et_input"
                android:layout_width="@dimen/layout_0dp"
                android:layout_height="@dimen/layout_30dp"
                android:layout_margin="@dimen/layout_10dp"
                android:layout_weight="1"
                android:background="@drawable/input_et_back"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_input"
                    android:layout_width="@dimen/layout_0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="@string/please_scan_send_order_or_barcode"
                    android:paddingLeft="@dimen/layout_10dp"
                    android:textColor="@color/yellow_text"
                    android:textColorHint="@color/hint_color"
                    android:textCursorDrawable="@color/yellow_text"
                    android:textSize="@dimen/textSize_14sp" />

                <RelativeLayout
                    android:id="@+id/rl_iv_input_scan"
                    android:layout_width="@dimen/layout_0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:background="@drawable/scan_back"
                    android:gravity="center_vertical|center_horizontal">

                    <ImageView
                        android:id="@+id/iv_input"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/scan" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_bad_reason"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/layout_23dp"
                    android:layout_height="@dimen/layout_23dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/layout_10dp"
                    android:layout_marginRight="@dimen/layout_10dp"
                    android:minHeight="@dimen/layout_0dp"
                    android:minWidth="@dimen/layout_0dp"
                    android:src="@drawable/bad_reasons"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_check_pic"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/welcome_text_margin"
                    android:layout_height="@dimen/welcome_text_margin"
                    android:layout_marginLeft="@dimen/layout_10dp"
                    android:paddingBottom="@dimen/layout_14dp"
                    android:paddingTop="@dimen/layout_14dp"
                    android:src="@drawable/check_pic"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_take_photo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/welcome_text_margin"
                    android:layout_height="@dimen/welcome_text_margin"
                    android:layout_marginLeft="@dimen/layout_10dp"
                    android:paddingBottom="@dimen/layout_14dp"
                    android:paddingTop="@dimen/layout_14dp"
                    android:src="@drawable/take_photo"
                    android:visibility="visible" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_order_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_10dp"
            android:layout_marginTop="@dimen/layout_6dp"
            android:background="@drawable/green_scandetail_bg"
            android:orientation="vertical">

            <LinearLayout
                style="@style/itemstyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/form_head_back"
                android:orientation="horizontal">

                <LinearLayout
                    style="@style/itemstyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/app_text_ingreen"
                        android:layout_width="@dimen/layout_0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/delivery_note" />

                    <TextView
                        style="@style/app_text_ingreen"
                        android:layout_width="@dimen/layout_0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/supplier" />

                    <TextView
                        android:id="@+id/textView5"
                        style="@style/app_text_ingreen"
                        android:layout_width="@dimen/layout_0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/purchase_order" />

                    <TextView
                        style="@style/app_text_ingreen"
                        android:layout_width="@dimen/layout_0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/get_material_time" />

                    <TextView
                        style="@style/app_text_ingreen"
                        android:layout_width="@dimen/layout_0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/to_get_material_minute" />

                </LinearLayout>
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rc_main_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
              />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_form_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_10dp"
            android:layout_marginRight="@dimen/layout_10dp"
            android:background="@drawable/green_scandetail_bg"
            android:orientation="vertical"
            android:paddingBottom="@dimen/layout_1dp">

            <LinearLayout
                style="@style/itemstyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/form_head_back"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cb_ischoose"
                    android:layout_width="@dimen/layout_40dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:button="@drawable/all_checkbox"
                    android:visibility="invisible" />

                <TextView
                    android:layout_width="@dimen/layout_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/item_seq"
                    android:textColor="@color/white_ff"
                    android:textSize="@dimen/textSize_14sp" />

                <TextView
                    android:layout_width="@dimen/layout_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="@string/item_name"
                    android:textColor="@color/white_ff"
                    android:textSize="@dimen/textSize_14sp" />

                <TextView
                    android:layout_width="@dimen/layout_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="@string/model"
                    android:textColor="@color/white_ff"
                    android:textSize="@dimen/textSize_14sp" />

                <TextView
                    android:layout_width="@dimen/layout_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="@string/picture_no"
                    android:textColor="@color/white_ff"
                    android:textSize="@dimen/textSize_14sp" />

                <TextView
                    android:layout_width="@dimen/layout_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/send_check_num"
                    android:textColor="@color/white_ff"
                    android:textSize="@dimen/textSize_14sp" />

                <TextView
                    android:layout_width="@dimen/layout_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/ok_num"
                    android:textColor="@color/white_ff"
                    android:textSize="@dimen/textSize_14sp" />

                <TextView
                    android:layout_width="@dimen/layout_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/check_state"
                    android:textColor="@color/white_ff"
                    android:textSize="@dimen/textSize_14sp" />

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rc_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/inclu_commit" />
</LinearLayout>