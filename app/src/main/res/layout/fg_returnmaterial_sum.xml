<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/ll_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_10dp"
        android:layout_marginRight="@dimen/layout_10dp"
        android:orientation="vertical"
        android:background="@drawable/accordingmaterialtop_sharp"
        android:padding="@dimen/layout_5dp">

        <LinearLayout
            android:id="@+id/ll_scan_order"
            style="@style/itemstyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_order"
                android:layout_width="@dimen/layout_60dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/return_material_order"
                android:textColor="@color/back47"
                android:textSize="@dimen/textSize_14sp" />

            <TextView
                android:id="@+id/tv_scan_order"
                android:layout_width="@dimen/layout_0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_10dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_14sp" />

        </LinearLayout>
        <View style="@style/fg_line_style" />

        <LinearLayout
            style="@style/itemstyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="@dimen/layout_30dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/back47"
                android:textSize="@dimen/textSize_14sp"
                android:text="@string/data"
                />
            <TextView
                android:id="@+id/tv_date"
                android:layout_width="@dimen/layout_0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_10dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_14sp"/>
            <TextView
                android:layout_width="@dimen/layout_45dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/back47"
                android:textSize="@dimen/textSize_14sp"
                android:text="@string/supplier"
                />
            <TextView
                android:id="@+id/tv_supplier"
                android:layout_width="@dimen/layout_0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_10dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_14sp"/>
        </LinearLayout>
        </LinearLayout>

    <include layout="@layout/inclu_commit" />
    <LinearLayout
        android:layout_below="@+id/ll_head"
        android:layout_marginTop="@dimen/layout_10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <include  layout="@layout/ryitem_common"
        />
    </LinearLayout>
</RelativeLayout>