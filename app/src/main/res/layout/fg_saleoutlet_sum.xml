<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/ll_salehead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_10dp"
        android:layout_marginRight="@dimen/layout_10dp"
        android:background="@drawable/accordingmaterialtop_sharp"
        android:orientation="vertical"
        android:padding="@dimen/layout_5dp">

        <LinearLayout
            style="@style/itemstyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="@dimen/layout_60dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/general_number"
                android:textColor="@color/back47"
                android:textSize="@dimen/textSize_14sp" />

            <TextView
                android:id="@+id/tv_head_post_order"
                android:layout_width="@dimen/layout_0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/layout_10dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_14sp" />

        </LinearLayout>

        <View style="@style/act_line_style"></View>

        <LinearLayout
            style="@style/itemstyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="@dimen/layout_60dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/custom"
                android:textColor="@color/back47"
                android:textSize="@dimen/textSize_14sp" />

            <TextView
                android:id="@+id/tv_custom"
                android:layout_width="@dimen/layout_0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_10dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_14sp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_salehead"
        android:layout_marginTop="@dimen/layout_10dp">

        <include layout="@layout/ryitem_common" />
    </LinearLayout>

    <include layout="@layout/inclu_commit" />
</RelativeLayout>