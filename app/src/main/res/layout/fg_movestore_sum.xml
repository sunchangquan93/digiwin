<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/ll_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_10dp"
        android:layout_marginRight="@dimen/layout_10dp"
        android:orientation="vertical"
        android:background="@drawable/accordingmaterialtop_sharp"
        android:padding="@dimen/layout_5dp">

        <LinearLayout
            android:id="@+id/ll_scan_inlocator"
            style="@style/itemstyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_moveinlocator"
                android:layout_width="@dimen/layout_70dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/move_instore"
                android:textColor="@color/back47"
                android:textSize="@dimen/textSize_14sp" />

            <EditText
                android:id="@+id/et_scan_moveinlocator"
                android:layout_width="@dimen/layout_0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_10dp"
                android:layout_weight="1"
                android:background="@null"
                android:singleLine="true"
                android:textColor="@color/back47"
                android:textCursorDrawable="@drawable/et_cursor_yellow"
                android:textSize="@dimen/textSize_14sp" />

        </LinearLayout>
        <View style="@style/fg_line_style" />

        <LinearLayout
            style="@style/itemstyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="@dimen/layout_60dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/back47"
                android:textSize="@dimen/textSize_14sp"
                android:text="@string/label_storage"
                />
            <TextView
                android:id="@+id/tv_storage"
                android:layout_width="@dimen/layout_0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_10dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_14sp"/>
            <TextView
                android:layout_width="@dimen/layout_60dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/back47"
                android:textSize="@dimen/textSize_14sp"
                android:text="@string/locator"
                />
            <TextView
                android:id="@+id/tv_locator"
                android:layout_width="@dimen/layout_0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_10dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_14sp"/>
        </LinearLayout>
        </LinearLayout>

    <include layout="@layout/inclu_commit" />
    <LinearLayout
        android:layout_below="@+id/ll_head"
        android:layout_marginTop="@dimen/layout_10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <include  layout="@layout/ryitem_common"
        />
    </LinearLayout>
</RelativeLayout>