<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/rl_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_10dp"
                android:layout_marginBottom="@dimen/layout_10dp"
                android:layout_marginLeft="@dimen/layout_10dp"
                android:layout_marginRight="@dimen/layout_10dp"
                android:orientation="vertical"
                android:background="@drawable/accordingmaterialtop_sharp"
                android:padding="@dimen/layout_5dp">

                <LinearLayout
                    style="@style/itemstyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="@dimen/layout_70dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textColor="@color/back47"
                        android:textSize="@dimen/textSize_14sp"
                        android:text="@string/shipping_order"
                        />
                    <TextView
                        android:id="@+id/tv_shipping_order"
                        android:layout_width="@dimen/layout_0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/layout_10dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSize_14sp"
                        />
                </LinearLayout>

                <View style="@style/act_line_style"></View>

                <LinearLayout
                    style="@style/itemstyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_width="@dimen/layout_0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/tv_apply_date_string"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/apply_date_"
                            android:paddingRight="@dimen/layout_5dp"
                            android:textSize="@dimen/textSize_12sp" />

                        <TextView
                            android:id="@+id/tv_apply_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="@dimen/textSize_12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_width="@dimen/layout_0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/tv_custom_string"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/custom"
                            android:paddingRight="@dimen/layout_5dp"
                            android:textSize="@dimen/textSize_12sp" />

                        <TextView
                            android:id="@+id/tv_custom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="@dimen/textSize_12sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        <include  layout="@layout/ryitem_common" />
        </LinearLayout>
    </ScrollView>
    <include layout="@layout/inclu_commit"></include>
</RelativeLayout>