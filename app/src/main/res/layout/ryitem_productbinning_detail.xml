<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/layout_10dp"
    >

    <CheckBox
        android:id="@+id/cb_ischoose"
        android:button="@drawable/child_checkbox"
        android:layout_width="@dimen/layout_30dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        />

    <LinearLayout
        android:id="@+id/llview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/cb_ischoose"
        android:orientation="vertical">

        <LinearLayout
            style="@style/itemstyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/layout_70dp"
                android:layout_height="wrap_content"
                android:text="@string/item_seq"
                android:textSize="@dimen/textSize_14sp" />

            <TextView
                android:id="@+id/tv_item_seq"
                android:layout_width="@dimen/layout_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/textSize_14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_10dp"
                android:layout_marginRight="@dimen/layout_20dp"
                android:text="@string/num"
                android:textSize="@dimen/textSize_14sp" />

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="@dimen/layout_0dp"
                android:layout_height="match_parent"
                android:textColor="@color/outside_yellow"
                android:layout_weight="1"
                android:textSize="@dimen/textSize_14sp" />

        </LinearLayout>

        <View style="@style/ry_line_style" />

        <LinearLayout
            style="@style/itemstyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/layout_70dp"
                android:layout_height="wrap_content"
                android:text="@string/product_number"
                android:textSize="@dimen/textSize_14sp" />

            <TextView
                android:id="@+id/tv_product_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_14sp" />

        </LinearLayout>
        <View style="@style/ry_line_style" />

        <LinearLayout
            style="@style/itemstyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/layout_70dp"
                android:layout_height="wrap_content"
                android:text="@string/item_name"
                android:textSize="@dimen/textSize_14sp" />

            <TextView
                android:id="@+id/tv_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_14sp" />

        </LinearLayout>
        <View style="@style/ry_line_style" />

        <LinearLayout
            style="@style/itemstyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/layout_70dp"
                android:layout_height="wrap_content"
                android:text="@string/item_no"
                android:textSize="@dimen/textSize_14sp" />

            <TextView
                android:id="@+id/tv_item_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_14sp" />

        </LinearLayout>

    </LinearLayout>

    <View
        style="@style/ry_line_style"
        android:layout_below="@id/llview"
        android:layout_marginLeft="@dimen/layout_10dp" />

</RelativeLayout>