<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/item_ll"
    style="@style/ry_style"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        style="@style/itemstyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_transfers_list"
            android:layout_width="@dimen/layout_70dp"
            android:layout_height="wrap_content"
            android:text="@string/transfers_list_no"
            android:textColor="@color/black_32"
            android:textSize="@dimen/textSize_14sp" />

        <TextView
            android:id="@+id/tv_receipt_no"
            android:layout_width="@dimen/layout_0dp"
            android:layout_weight="1"
            android:textColor="@color/Base_color"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize_14sp" />

    </LinearLayout>
    <View
        android:id="@+id/line_1"
        style="@style/ry_line_style"
        android:layout_width="wrap_content" />

    <LinearLayout
        style="@style/itemstyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/layout_70dp"
            android:layout_height="wrap_content"
            android:text="@string/data"
            android:textColor="@color/black_32"
            android:textSize="@dimen/textSize_14sp" />

        <TextView
            android:textColor="@color/Base_color"
            android:layout_marginLeft="@dimen/layout_5dp"
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize_14sp" />

    </LinearLayout>


</LinearLayout>