<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_ll"
    style="@style/ry_style"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        style="@style/itemstyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/layout_30dp"
            android:layout_height="wrap_content"
            android:text="@string/post_material_order"
            android:textSize="@dimen/textSize_14sp" />

        <TextView
            android:id="@+id/tv_item_post_material_order"
            android:layout_width="@dimen/layout_0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize_12sp" />

        <TextView
            android:layout_width="@dimen/layout_30dp"
            android:layout_height="wrap_content"
            android:text="@string/data"
            android:textSize="@dimen/textSize_14sp" />

        <TextView
            android:id="@+id/tv_item_plan_date"
            android:layout_width="@dimen/layout_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="@dimen/textSize_12sp" />
    </LinearLayout>

    <View
        style="@style/ry_line_style" />

    <LinearLayout
        style="@style/itemstyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/layout_30dp"
            android:layout_height="wrap_content"
            android:text="@string/person"
            android:textSize="@dimen/textSize_14sp" />

        <TextView
            android:id="@+id/tv_item_person"
            android:layout_width="@dimen/layout_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="@dimen/textSize_12sp" />
        <TextView
            android:layout_width="@dimen/layout_30dp"
            android:layout_height="wrap_content"
            android:text="@string/department"
            android:textSize="@dimen/textSize_14sp" />

        <TextView
            android:id="@+id/tv_item_department"
            android:layout_width="@dimen/layout_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="@dimen/textSize_12sp" />
    </LinearLayout>

</LinearLayout>