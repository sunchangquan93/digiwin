<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/activity_title_toolbar_bar" ></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/layout_10dp"
        android:layout_marginLeft="@dimen/layout_10dp"
        android:layout_marginRight="@dimen/layout_10dp"
        android:background="@drawable/all_recycler_header"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_text_one"
            android:layout_width="@dimen/layout_0dp"
            android:layout_weight="1"
            android:padding="@dimen/layout_5dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/tv_text_two"
            android:layout_width="@dimen/layout_0dp"
            android:padding="@dimen/layout_5dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/tv_text_three"
            android:layout_width="@dimen/layout_0dp"
            android:padding="@dimen/layout_5dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/tv_text_four"
            android:layout_width="@dimen/layout_0dp"
            android:padding="@dimen/layout_5dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="@dimen/layout_10dp"
        android:layout_marginRight="@dimen/layout_10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/all_recycler_body"
        android:orientation="vertical">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rc_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

</LinearLayout>