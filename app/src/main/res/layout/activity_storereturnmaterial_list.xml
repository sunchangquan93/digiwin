<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/activity_title_toolbar_bar"></include>

    <LinearLayout
        android:id="@+id/ll_search_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_10dp"
        android:background="@drawable/allscanedit_bg"
        android:orientation="vertical"
        android:padding="@dimen/layout_5dp">

        <LinearLayout
            android:id="@+id/ll_return_material"
            style="@style/itemstyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_return_material"
                android:layout_width="@dimen/layout_70dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/return_material_order"
                android:textColor="@color/black_32"
                android:textSize="@dimen/textSize_14sp" />

            <EditText
                android:id="@+id/et_return_material"
                android:layout_width="@dimen/layout_0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_10dp"
                android:layout_weight="1"
                android:background="@null"
                android:singleLine="true"
                android:textColor="@color/black_32"
                android:textCursorDrawable="@drawable/et_cursor_yellow"
                android:textSize="@dimen/textSize_14sp" />
        </LinearLayout>

        <View style="@style/fg_line_style" />
        <LinearLayout
            android:id="@+id/ll_supplier_no"
            style="@style/itemstyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_supplier_no"
                android:layout_width="@dimen/layout_70dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/supplier_no"
                android:textColor="@color/black_32"
                android:textSize="@dimen/textSize_14sp" />

            <EditText
                android:id="@+id/et_supplier_no"
                android:layout_width="@dimen/layout_0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_10dp"
                android:layout_weight="1"
                android:background="@null"
                android:singleLine="true"
                android:textColor="@color/black_32"
                android:textCursorDrawable="@drawable/et_cursor_yellow"
                android:textSize="@dimen/textSize_14sp" />
        </LinearLayout>

        <View style="@style/fg_line_style" />

        <LinearLayout
            android:id="@+id/ll_applicant"
            style="@style/itemstyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_applicant"
                android:layout_width="@dimen/layout_70dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/applicant"
                android:textColor="@color/black_32"
                android:textSize="@dimen/textSize_14sp" />

            <EditText
                android:id="@+id/et_applicant"
                android:layout_width="@dimen/layout_0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_10dp"
                android:layout_weight="1"
                android:background="@null"
                android:singleLine="true"
                android:textColor="@color/black_32"
                android:textCursorDrawable="@drawable/et_cursor_yellow"
                android:textSize="@dimen/textSize_14sp" />
        </LinearLayout>

        <View style="@style/fg_line_style" />

        <LinearLayout
            android:id="@+id/ll_department"
            style="@style/itemstyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_department"
                android:layout_width="@dimen/layout_70dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/department"
                android:textColor="@color/black_32"
                android:textSize="@dimen/textSize_14sp" />

            <EditText
                android:id="@+id/et_department"
                android:layout_width="@dimen/layout_0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_10dp"
                android:layout_weight="1"
                android:background="@null"
                android:singleLine="true"
                android:textColor="@color/black_32"
                android:textCursorDrawable="@drawable/et_cursor_yellow"
                android:textSize="@dimen/textSize_14sp" />
        </LinearLayout>

        <View style="@style/fg_line_style" />

        <LinearLayout
            android:id="@+id/ll_date"
            style="@style/itemstyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="@dimen/layout_70dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/data"
                android:textColor="@color/black_32"
                android:textSize="@dimen/textSize_14sp" />

            <EditText
                android:id="@+id/et_date"
                android:layout_width="@dimen/layout_0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_10dp"
                android:layout_weight="1"
                android:background="@null"
                android:singleLine="true"
                android:textColor="@color/black_32"
                android:textCursorDrawable="@drawable/et_cursor_yellow"
                android:textSize="@dimen/textSize_14sp" />
            <ImageView
                android:id="@+id/date"
                android:src="@drawable/time"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/layout_20dp" />
        </LinearLayout>

        <View style="@style/fg_line_style" />

        <Button
            android:id="@+id/btn_search_sure"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_40dp"
            android:text="@string/label_sure"
            android:textColor="@color/WHITE"
            android:textSize="@dimen/textSize_18sp"
            android:layout_margin="@dimen/layout_10dp"
            android:background="@drawable/accordingmaterialtop_sharp"/>

    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:visibility="gone"
        android:id="@+id/ry_list"
        android:layout_marginTop="@dimen/layout_10dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="@dimen/layout_0dp"></android.support.v7.widget.RecyclerView>

</LinearLayout>
