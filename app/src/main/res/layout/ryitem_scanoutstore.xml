<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_ll"
    style="@style/ry_style"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        style="@style/itemstyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_shipping_order_string"
            android:layout_width="@dimen/layout_60dp"
            android:layout_height="wrap_content"
            android:text="@string/shipping_order"
            android:textSize="@dimen/textSize_14sp" />

        <TextView
            android:id="@+id/tv_shipping_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/Base_color"
            android:textSize="@dimen/textSize_14sp" />
    </LinearLayout>

    <View style="@style/ry_line_style" />
    <LinearLayout
        style="@style/itemstyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_date_string"
            android:layout_width="@dimen/layout_60dp"
            android:layout_height="wrap_content"
            android:text="@string/shipping_date"
            android:textSize="@dimen/textSize_14sp" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="@dimen/layout_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:textColor="@color/Base_color"
            android:textSize="@dimen/textSize_14sp" />
        <TextView
            android:id="@+id/tv_custom_string"
            android:layout_width="@dimen/layout_60dp"
            android:layout_height="wrap_content"
            android:text="@string/custom"
            android:textSize="@dimen/textSize_14sp" />

        <TextView
            android:id="@+id/tv_custom"
            android:layout_width="@dimen/layout_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/Base_color"
            android:textSize="@dimen/textSize_14sp" />

    </LinearLayout>
    <View style="@style/ry_line_style" />
    <LinearLayout
        style="@style/itemstyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_operating_department_string"
            android:layout_width="@dimen/layout_60dp"
            android:layout_height="wrap_content"
            android:text="@string/operating_department"
            android:textSize="@dimen/textSize_14sp" />

        <TextView
            android:id="@+id/tv_operating_department"
            android:layout_width="@dimen/layout_0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:textColor="@color/Base_color"
            android:textSize="@dimen/textSize_14sp" />

        <TextView
            android:id="@+id/tv_salesman_string"
            android:layout_width="@dimen/layout_60dp"
            android:layout_height="wrap_content"
            android:text="@string/salesman"
            android:textSize="@dimen/textSize_14sp" />

        <TextView
            android:id="@+id/tv_salesman"
            android:layout_width="@dimen/layout_0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/Base_color"
            android:textSize="@dimen/textSize_14sp" />

    </LinearLayout>

</LinearLayout>