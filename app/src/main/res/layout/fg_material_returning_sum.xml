<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_ff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_title"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_test_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_10dp"
                android:layout_marginRight="@dimen/layout_10dp"
                android:layout_marginTop="@dimen/layout_10dp"
                android:background="@drawable/accordingmaterialtop_sharp"
                android:orientation="vertical"
                android:padding="@dimen/layout_5dp">

                <LinearLayout
                    style="@style/itemstyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_item_no"
                        android:layout_width="@dimen/layout_70dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/material_returning_number"
                        android:textColor="@color/back47"
                        android:textSize="@dimen/textSize_14sp" />

                    <TextView
                        android:id="@+id/tv_material_returning_number"
                        android:layout_width="@dimen/layout_0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/layout_10dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:textColor="@color/white"
                        android:textCursorDrawable="@drawable/et_cursor_yellow"
                        android:textSize="@dimen/textSize_14sp" />
                </LinearLayout>

                <View style="@style/act_line_style"></View>

                <LinearLayout
                    style="@style/itemstyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="@dimen/layout_0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/layout_70dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="@string/apply_branch"
                            android:textColor="@color/back47"
                            android:textSize="@dimen/textSize_14sp" />

                        <TextView
                            android:id="@+id/tv_apply_branch"
                            android:layout_width="@dimen/layout_0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/layout_10dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:textColor="@color/white"
                            android:textSize="@dimen/textSize_14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/layout_0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/layout_70dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="@string/apply_date"
                            android:textColor="@color/back47"
                            android:textSize="@dimen/textSize_14sp" />

                        <TextView
                            android:id="@+id/tv_apply_date"
                            android:layout_width="@dimen/layout_0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/layout_10dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:textColor="@color/white"
                            android:textSize="@dimen/textSize_14sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <include layout="@layout/ry_common" />
        </LinearLayout>
    </ScrollView>

    <include layout="@layout/inclu_commit"></include>
</RelativeLayout>
