<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_distribute"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="digiwin.smartdepot.module.activity.produce.distribute.DistributeActivity">

    <include  layout="@layout/activity_title_toolbar_bar"
         />

    <LinearLayout
        android:id="@+id/ll_search_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/layout_10dp"
        android:layout_marginRight="@dimen/layout_10dp"
        android:background="@drawable/green_scandetail_bg"
        style="@style/itemstyle"
        android:visibility="visible"
        android:layout_below="@+id/toolbar_title"
        android:layout_marginTop="@dimen/layout_10dp"
        android:layout_centerHorizontal="true">


            <LinearLayout
                android:id="@+id/ll_resource_barcode"
                style="@style/itemstyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_resource_barcode"
                    android:layout_width="@dimen/layout_70dp"
                    android:layout_height="wrap_content"
                    android:text="@string/resource_barcode"
                    android:textColor="@color/black_32"
                    android:textSize="@dimen/textSize_14sp" />

                <EditText
                    android:id="@+id/et_resource_barcode"
                    android:layout_width="@dimen/layout_0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/layout_10dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:singleLine="true"
                    android:textColor="@color/black_32"
                    android:textCursorDrawable="@drawable/et_cursor_yellow"
                    android:textSize="@dimen/textSize_14sp" />
            </LinearLayout>


            <View style="@style/fg_line_style" />
            <LinearLayout
                android:id="@+id/ll_sum_num"
                style="@style/itemstyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_sum_num"
                    android:layout_width="@dimen/layout_70dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/sum_num"
                    android:textColor="@color/black_32"
                    android:textSize="@dimen/textSize_14sp" />

                <EditText
                    android:id="@+id/et_sum_num"
                    android:layout_width="@dimen/layout_0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/layout_10dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:singleLine="true"
                    android:textColor="@color/black_32"
                    android:textCursorDrawable="@drawable/et_cursor_yellow"
                    android:textSize="@dimen/textSize_14sp" />
            </LinearLayout>


            <View style="@style/fg_line_style" />
            <LinearLayout
                android:id="@+id/ll_single_package_num"
                style="@style/itemstyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_single_package_num"
                    android:layout_width="@dimen/layout_70dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/single_page_num"
                    android:textColor="@color/black_32"
                    android:textSize="@dimen/textSize_14sp" />

                <EditText
                    android:id="@+id/et_single_package_num"
                    android:layout_width="@dimen/layout_0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/layout_10dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:singleLine="true"
                    android:inputType="number"
                    android:textColor="@color/black_32"
                    android:textCursorDrawable="@drawable/et_cursor_yellow"
                    android:textSize="@dimen/textSize_14sp" />
            </LinearLayout>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/layout_10dp"
        android:layout_marginRight="@dimen/layout_10dp"
        android:background="@drawable/green_scandetail_bg"
        style="@style/itemstyle"
        android:visibility="visible"
        android:layout_below="@+id/ll_search_dialog"
        android:layout_marginTop="@dimen/layout_10dp"
        android:layout_centerHorizontal="true">


            <LinearLayout
                style="@style/itemstyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="@dimen/layout_70dp"
                    android:layout_height="wrap_content"
                    android:text="@string/item_name"
                    android:textColor="@color/black_32"
                    android:textSize="@dimen/textSize_14sp" />

                <TextView
                    android:id="@+id/tv_item_name"
                    android:layout_width="@dimen/layout_0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/layout_10dp"
                    android:layout_weight="1"
                    android:textColor="@color/green7d"
                    android:textSize="@dimen/textSize_14sp" />
            </LinearLayout>


            <View style="@style/fg_line_style" />
            <LinearLayout
                style="@style/itemstyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="@dimen/layout_70dp"
                    android:layout_height="wrap_content"
                    android:text="@string/model"
                    android:textColor="@color/black_32"
                    android:textSize="@dimen/textSize_14sp" />

                <TextView
                    android:id="@+id/tv_model"
                    android:layout_width="@dimen/layout_0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/layout_10dp"
                    android:layout_weight="1"
                    android:textColor="@color/green7d"
                    android:textSize="@dimen/textSize_14sp" />
            </LinearLayout>


            <View style="@style/fg_line_style" />
            <LinearLayout
                style="@style/itemstyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="@dimen/layout_70dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/item_no"
                    android:textColor="@color/black_32"
                    android:textSize="@dimen/textSize_14sp" />

                <TextView
                    android:id="@+id/tv_item_no"
                    android:layout_width="@dimen/layout_0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/layout_10dp"
                    android:layout_weight="1"
                    android:textColor="@color/green7d"
                    android:textSize="@dimen/textSize_14sp" />
            </LinearLayout>


            <View style="@style/fg_line_style" />
            <LinearLayout
                style="@style/itemstyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="@dimen/layout_70dp"
                    android:layout_height="wrap_content"
                    android:text="@string/barcode_type"
                    android:textColor="@color/black_32"
                    android:textSize="@dimen/textSize_14sp" />

                <TextView
                    android:id="@+id/tv_barcode_type"
                    android:layout_width="@dimen/layout_0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/layout_10dp"
                    android:layout_weight="1"
                    android:textColor="@color/green7d"
                    android:textSize="@dimen/textSize_14sp" />
            </LinearLayout>
            <View style="@style/fg_line_style" />
            <LinearLayout
                style="@style/itemstyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="@dimen/layout_70dp"
                    android:layout_height="wrap_content"
                    android:text="@string/num_of_print_pieces"
                    android:textColor="@color/black_32"
                    android:textSize="@dimen/textSize_14sp" />

                <TextView
                    android:id="@+id/tv_num_of_print_pieces"
                    android:layout_width="@dimen/layout_0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/layout_10dp"
                    android:layout_weight="1"
                    android:textColor="@color/green7d"
                    android:textSize="@dimen/textSize_14sp" />
            </LinearLayout>
        </LinearLayout>

    <Button
        android:id="@+id/btn_print"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/layout_10dp"
        android:layout_marginRight="@dimen/layout_10dp"
        android:gravity="center"
        android:background="@mipmap/savecommit"
        android:text="@string/print_label"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize_16sp"
        />
</RelativeLayout>
