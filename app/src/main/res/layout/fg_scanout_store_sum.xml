<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/ll_put_in_store_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_10dp"
        android:layout_marginRight="@dimen/layout_10dp"
        android:orientation="vertical"
        android:background="@drawable/accordingmaterialtop_sharp"
        android:padding="@dimen/layout_5dp">

        <LinearLayout
            style="@style/itemstyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="@dimen/layout_60dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/back47"
                android:textSize="@dimen/textSize_14sp"
                android:text="@string/shipping_order"
                />

            <TextView
                android:id="@+id/tv_head_post_order"
                android:layout_width="@dimen/layout_0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/layout_10dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_14sp" />

        </LinearLayout>
        <View style="@style/act_line_style"></View>

        <LinearLayout
            style="@style/itemstyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="@dimen/layout_60dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/back47"
                android:textSize="@dimen/textSize_14sp"
                android:text="@string/shipping_date"
                />
            <TextView
                android:id="@+id/tv_head_date"
                android:layout_width="@dimen/layout_0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_10dp"
                android:layout_weight="1.5"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_14sp"
                />

        </LinearLayout>

        <View style="@style/act_line_style"></View>

        <LinearLayout
            style="@style/itemstyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="@dimen/layout_60dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/back47"
                android:textSize="@dimen/textSize_14sp"
                android:text="@string/custom"
                />
            <TextView
                android:id="@+id/tv_custom"
                android:layout_width="@dimen/layout_0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_10dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_14sp"
                />

        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/inclu_commit" />
    <LinearLayout
        android:layout_below="@+id/ll_put_in_store_head"
        android:layout_above="@+id/commit"
        android:layout_marginTop="@dimen/layout_10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <include layout="@layout/ryitem_common"
        />
    </LinearLayout>
</RelativeLayout>