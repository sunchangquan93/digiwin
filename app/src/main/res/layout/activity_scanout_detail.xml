<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <include  layout="@layout/activity_title_toolbar_bar"></include>

    <LinearLayout
        android:id="@+id/ll_group"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_0dp"
        android:orientation="vertical"
        android:layout_weight="1">

        <ExpandableListView
            android:id="@+id/expand_lv"
            android:layout_margin="@dimen/layout_10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/zx_scandetail_bg" />
    </LinearLayout>

    <include layout="@layout/inclu_delete"></include>

</LinearLayout>