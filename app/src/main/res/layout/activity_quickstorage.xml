<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/activity_title_toolbar_bar"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_title"
        android:layout_alignParentStart="true">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/rl_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_10dp"
                    android:layout_marginBottom="@dimen/layout_10dp"
                    android:layout_marginLeft="@dimen/layout_10dp"
                    android:layout_marginRight="@dimen/layout_10dp"
                    android:orientation="vertical"
                    android:background="@drawable/accordingmaterialtop_sharp"
                    android:padding="@dimen/layout_5dp">

                    <LinearLayout
                        style="@style/itemstyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="@dimen/layout_70dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:textColor="@color/back47"
                            android:textSize="@dimen/textSize_14sp"
                            android:text="@string/post_material_order"
                            />
                        <TextView
                            android:id="@+id/tv_post_material_order"
                            android:layout_width="@dimen/layout_0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/layout_10dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:textColor="@color/white"
                            android:textSize="@dimen/textSize_14sp"
                            />
                    </LinearLayout>

                    <View style="@style/act_line_style"></View>

                    <LinearLayout
                        style="@style/itemstyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:layout_width="@dimen/layout_0dp"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_width="@dimen/layout_70dp"
                                android:layout_height="wrap_content"
                                android:text="@string/data"
                                android:paddingRight="@dimen/layout_5dp"
                                android:textSize="@dimen/textSize_14sp" />

                            <TextView
                                android:id="@+id/tv_date"
                                android:layout_marginLeft="@dimen/layout_10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="@dimen/textSize_14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:layout_width="@dimen/layout_0dp"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_width="@dimen/layout_70dp"
                                android:layout_height="wrap_content"
                                android:text="@string/supplier"
                                android:paddingRight="@dimen/layout_5dp"
                                android:textSize="@dimen/textSize_14sp" />

                            <TextView
                                android:id="@+id/tv_supplier"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="@dimen/textSize_14sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            <include  layout="@layout/ryitem_fifo_common" />
        </LinearLayout>
    </ScrollView>
    <include layout="@layout/inclu_commit"></include>
</RelativeLayout>
