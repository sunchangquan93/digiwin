<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/item_ll"
    style="@style/ry_style"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/cb_ischoose"
        android:button="@drawable/child_checkbox"
        android:layout_width="@dimen/layout_30dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            style="@style/itemstyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/layout_70dp"
                android:layout_height="wrap_content"
                android:text="@string/store_lock_no"
                android:textColor="@color/black_32"
                android:textSize="@dimen/textSize_14sp" />

            <TextView
                android:id="@+id/tv_lock_no"
                android:layout_width="@dimen/layout_0dp"
                android:layout_weight="1"
                android:textColor="@color/Base_color"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_14sp" />

        </LinearLayout>
        <View
            style="@style/ry_line_style"
            android:layout_width="wrap_content" />

        <LinearLayout
            style="@style/itemstyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/layout_70dp"
                android:layout_height="wrap_content"
                android:text="@string/store_lock_date"
                android:textColor="@color/black_32"
                android:textSize="@dimen/textSize_14sp" />

            <TextView
                android:textColor="@color/Base_color"
                android:id="@+id/tv_lock_date"
                android:layout_weight="2"
                android:layout_width="@dimen/layout_0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_14sp" />

            <TextView
                android:layout_width="@dimen/layout_30dp"
                android:layout_height="wrap_content"
                android:text="@string/person"
                android:textColor="@color/black_32"
                android:textSize="@dimen/textSize_14sp" />

            <TextView
                android:textColor="@color/Base_color"
                android:layout_marginLeft="@dimen/layout_5dp"
                android:id="@+id/tv_lock_people"
                android:layout_weight="1"
                android:layout_width="@dimen/layout_0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_14sp" />

        </LinearLayout>

        <View
            style="@style/ry_line_style"
            android:layout_width="wrap_content" />

        <LinearLayout
            style="@style/itemstyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/layout_70dp"
                android:layout_height="wrap_content"
                android:text="@string/lock_reason"
                android:textColor="@color/black_32"
                android:textSize="@dimen/textSize_14sp" />

            <TextView
                android:textColor="@color/Base_color"
                android:id="@+id/tv_lock_reason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_14sp" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>