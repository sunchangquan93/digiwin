<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/rl_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/layout_10dp"
                android:layout_marginLeft="@dimen/layout_10dp"
                android:layout_marginRight="@dimen/layout_10dp"
                android:layout_marginTop="@dimen/layout_10dp"
                android:background="@drawable/accordingmaterialtop_sharp"
                android:orientation="vertical"
                android:padding="@dimen/layout_5dp">

                <LinearLayout
                    style="@style/itemstyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="@dimen/layout_70dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/super_number"
                        android:textColor="@color/back47"
                        android:textSize="@dimen/textSize_14sp" />

                    <TextView
                        android:id="@+id/tv_super_number"
                        android:layout_width="@dimen/layout_0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/layout_10dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSize_14sp" />
                </LinearLayout>

                <View style="@style/act_line_style"></View>

                <LinearLayout
                    style="@style/itemstyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="@dimen/layout_70dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/data"
                        android:textColor="@color/back47"
                        android:textSize="@dimen/textSize_14sp" />

                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="@dimen/layout_0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/layout_10dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSize_14sp" />
                </LinearLayout>

                <View style="@style/act_line_style"></View>

                <LinearLayout
                    style="@style/itemstyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/tv_department_string"
                        android:layout_width="@dimen/layout_70dp"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/layout_5dp"
                        android:text="@string/department"
                        android:textSize="@dimen/textSize_14sp" />

                    <TextView
                        android:id="@+id/tv_department"
                        android:layout_width="@dimen/layout_0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/layout_10dp"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSize_14sp" />

                    <TextView
                        android:id="@+id/tv_applicant_string"
                        android:layout_width="@dimen/layout_70dp"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/layout_5dp"
                        android:text="@string/applicant"
                        android:textSize="@dimen/textSize_14sp" />

                    <TextView
                        android:id="@+id/tv_applicant"
                        android:layout_width="@dimen/layout_0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/layout_10dp"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSize_14sp" />

                </LinearLayout>
            </LinearLayout>

            <include layout="@layout/ryitem_common" />
        </LinearLayout>
    </ScrollView>

    <include layout="@layout/inclu_commit"></include>
</RelativeLayout>